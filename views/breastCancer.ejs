    <script>
        function Loading(){
            document.getElementById('spinnerContainer').style.cssText = ' display: block;';
            document.getElementById('try').style.cssText = 'filter: blur(5px); pointer-events: none;';
            document.getElementById('scroll').style.cssText = 'overflow-y: hidden;';
            document.getElementById('navBar').style.cssText = ' display: none;';
        }
        (function () {
            'use strict'
            const forms = document.querySelectorAll('.requires-validation')
            Array.from(forms)
            .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
